---
import BaseLayout from '../layouts/baseLayout.astro'
const allPosts = await Astro.glob('./posts/*.md')
---

<BaseLayout pageTitle='博客'>
  <h1>Blog</h1>
  <ul>
    {
      allPosts.map((post) => (
        <li>
          <a href={post.url}>{post.frontmatter.title}</a>
        </li>
      ))
    }
  </ul>
</BaseLayout>
