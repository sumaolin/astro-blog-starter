---
import BaseLayout from "../../layouts/baseLayout.astro";
const allPosts = await Astro.glob("../posts/*.md");
// 获取 文章的所有标签
const tags = allPosts.map((p) => p.frontmatter.tags);
const flatTags = tags.flat();
const uinqueTags = [...new Set(flatTags)];
---

<BaseLayout pageTitle="所有标签">
  <div class="tags-wrapper">
    <h2 class="tit">所有标签</h2>
    <ul class="tags">
      {
        uinqueTags.map((tag, index) => {
          return (
            <li class="tag">
              <a href={`/tags/${tag}`}>{tag}</a>
            </li>
          );
        })
      }
    </ul>
  </div>
</BaseLayout>
<style lang="scss">
  .tags-wrapper {
    margin: 80px 20px;
    .tags {
      padding: 0;
      margin: 0;
      font-size: 16px;
      .tag {
        list-style: none;
        position: relative;
        font-size: 1em;
        line-height: 1.6em;
        height: 1.6em;
        display: inline-block;
        padding-left: 2.4em;
        padding-right: 1.3em;
        border: dashed 1px #1f0909;
        border-radius: 0.8em;

        margin-bottom: 15px;
        margin-right: 15px;
        a {
          color: #1f0909;
        }
        &::before {
          content: "";
          background-position: center;
          background-size: contain;
          background-repeat: no-repeat;
          width: 1em;
          height: 1em;
          position: absolute;
          top: 50%;
          left: 0.8em;
          transform: translateY(-50%);
          background-image: url(data:image/svg+xml;base64,);
        }
        &:hover {
          background-color: #86909c;
        }
      }
    }
  }
</style>
