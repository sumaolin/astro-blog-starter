---
const { arrPost } = Astro.props;
---

<ul class="posts">
  {
    arrPost.map((post) => (
      <li class="item post-info">
        <span class="date">{post.frontmatter.pubDate.split("T")[0]}</span>
        <a href={post.url}>{post.frontmatter.title}</a>
      </li>
    ))
  }
</ul>
<style lang="scss" is:global>
  .posts {
    // margin: 0;
    padding: 0;

    .item {
      list-style: none;
      margin: 16px 0;
      .date {
        padding-right: 0.5em;
      }
    }
  }
</style>
